        app:layout_constraintEnd_toEndOf="parent"
        android:width="300dp"
        android:height="120dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textAlignment="textStart"
        />
    <TextView
        android:id="@+id/titleBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollo web"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/butto_Curso1"
        app:layout_constraintStart_toStartOf="@id/butto_Curso1"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/dayBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martes-Jueves"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/titleBt"
        app:layout_constraintStart_toStartOf="@id/butto_Curso1"
        android:elevation="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/hourBt"
