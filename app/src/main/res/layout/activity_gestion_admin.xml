<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestion_admin">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Gestion"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/GestionAdmin_btVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GestionAdmin_btVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gestionAdmin_btCursos"
        android:layout_width="365dp"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="64dp"
        android:onClick="irACursos"
        android:text="Cursos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/gestionAdmin_btDocentes"
        android:layout_width="365dp"
        android:layout_height="61dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:onClick="irADocentes"
        android:text="Docentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestionAdmin_btCursos" />

    <Button
        android:id="@+id/gestionAdmin_btEstudaintes"
        android:layout_width="365dp"
        android:layout_height="61dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:text="Estudiantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestionAdmin_btDocentes" />

    <Button
        android:id="@+id/gestionAdmin_Novedades"
        android:layout_width="365dp"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:text="Novedades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gestionAdmin_btEstudaintes" />
</androidx.constraintlayout.widget.ConstraintLayout>